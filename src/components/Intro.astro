---
import Logo from "./Logo.astro"
import { getI18N } from '../i18n';

const {currentLocale} = Astro
const i18n = getI18N({currentLocale})

---

<section class="text-xl text-left px-20 max-w-[60%] text-pretty mx-auto my-24">
  <Logo class="w-16 m-auto text-white" /> 
  <h1 class="text-5xl font-semibold text-center text-wrap mx-auto mb-10">{i18n.INTRO_TITLE} <br />{i18n.INTRO_TITLE_2}</h1>
  <p set:html={i18n.INTRO_DESCRIPTION_1}></p>
  <p set:html={i18n.INTRO_DESCRIPTION_2}></p>
  <p set:html={i18n.INTRO_DESCRIPTION_3}></p>
  <p set:html={i18n.INTRO_DESCRIPTION_4}></p>
</section>