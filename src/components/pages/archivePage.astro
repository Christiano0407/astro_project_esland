---
import Layout from "@Layouts/Layout.astro";
import HeroContainer from "@components/HeroContainer.astro";
import { getI18N } from "../../i18n";


const { currentLocale } = Astro.props
const i18n = getI18N({currentLocale})

---

<Layout 
title=`${i18n.INTRO_TITLE}&nbsp;${new Date().getFullYear()}` 
description=`${i18n.SEO_DESCRIPTION}&nbsp;${new Date().getFullYear()}`
>
 <HeroContainer img="../../../public/img/archivo-background.webp">
   {i18n.ARCHIVO.HERO_TITLE}
 </HeroContainer>

</Layout>